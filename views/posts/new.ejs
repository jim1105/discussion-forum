<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to Topic ID: <%= id %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/threads/<%= id %>/posts" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <textarea id="w3review" name="comment" rows="4" cols="37" placeholder="Comment here..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/threads">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

